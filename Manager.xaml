<Window x:Class="MDK.Manager"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MDK"
        mc:Ignorable="d"
        Title="Панель менеджера" Height="800" Width="900"
        WindowStartupLocation="CenterScreen"
        Background="White">

    <Window.Resources>
        <!-- Фон заголовка -->
        <Style x:Key="SecondaryBackground" TargetType="Border">
            <Setter Property="Background" Value="#BBDCFA"/>
        </Style>

        <!-- Кнопка "Выход" -->
        <Style x:Key="ExitButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#0C4882"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontFamily" Value="Bahnschrift Light SemiCondensed"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#0C4882"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#EAF4FF"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Заголовок -->
        <Style x:Key="HeaderText" TargetType="TextBlock">
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontFamily" Value="Bahnschrift Light SemiCondensed"/>
            <Setter Property="Foreground" Value="#0C4882"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <!-- Обычный текст -->
        <Style x:Key="NormalText" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontFamily" Value="Bahnschrift Light SemiCondensed"/>
            <Setter Property="Margin" Value="0,4,0,4"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
        </Style>

        <!-- Жирный текст -->
        <Style x:Key="BoldText" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontFamily" Value="Bahnschrift Light SemiCondensed"/>
            <Setter Property="Margin" Value="0,4,0,4"/>
        </Style>

        <!-- Глобальный стиль для кнопок действий -->
        <Style x:Key="AccentButton" TargetType="Button">
            <Setter Property="Background" Value="#0C4882"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontFamily" Value="Bahnschrift Light SemiCondensed"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="Margin" Value="0,0,8,0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#0A3A6A"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Основной стиль карточки заявки -->
        <Style x:Key="RequestItemBorder" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#BBDCFA"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="6"/>
            <Setter Property="Margin" Value="12,6,12,6"/>
            <Setter Property="Padding" Value="16"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="6" ShadowDepth="2" Opacity="0.15" Direction="270"/>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#F9FCFF"/>
                    <Setter Property="BorderBrush" Value="#A0CCE8"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <Border Grid.Row="0" Style="{StaticResource SecondaryBackground}" Padding="20,15">
            <Grid>
                <TextBlock Text="Панель менеджера" Style="{StaticResource HeaderText}"/>
                <Button x:Name="BtnExit"
                        Content="Выход"
                        Style="{StaticResource ExitButton}"
                        HorizontalAlignment="Right"
                        Click="BtnExit_Click"/>
            </Grid>
        </Border>

        <!-- Список заявок -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Margin="0,10,0,10">
            <StackPanel x:Name="StackPanelRequests" Margin="0,0,0,20">
                <!-- Здесь динамически добавляются карточки из C# -->
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>